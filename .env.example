# API Configuration
NEXT_PUBLIC_API_URL=https://api.example.com

# Google Tag Manager
# Add your GTM ID here (e.g., GTM-XXXXXXX)
NEXT_PUBLIC_GTM_ID=

# Support Email
# Add your support email here (e.g., support@example.com)
# If not set, the Help button will not be shown
NEXT_PUBLIC_SUPPORT_EMAIL=

# Laravel Reverb WebSocket Server
NEXT_PUBLIC_REVERB_APP_KEY=your-app-key
NEXT_PUBLIC_REVERB_HOST=localhost
NEXT_PUBLIC_REVERB_PORT=8080
NEXT_PUBLIC_REVERB_SCHEME=http

# Sentry Configuration
# Get your DSN from https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=
# Optional: Override environment (defaults to 'production')
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production

# Sentry Source Maps Upload (for CI/CD and Vercel deployments)
# Get your auth token from https://sentry.io/settings/account/api/auth-tokens/
SENTRY_AUTH_TOKEN=
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-slug

# Sentry Release Tracking (automatically set by Vercel, can be overridden)
# This is used to match errors to the correct source maps
# On Vercel, this should be set to the VERCEL_GIT_COMMIT_SHA system env var
NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA=
# Optional: Manual release identifier (only if not using Vercel)
NEXT_PUBLIC_SENTRY_RELEASE=
